<div class="popupcomponent-background @(IsVisible ? "show" : "")">
    <div class="popupcomponent-inner">
        <button class="close-button" @onclick="OnCloseClick">X</button>
        <h2 class="popupcomponent-title">@Title</h2>
        <div class="popupcomponent-content">
            @Content
        </div>
        <div class="popupcomponent-buttons">
            <button class="btn btn-secondary" @onclick="OnSecondaryClick">
                <img src="@SecondaryButtonImageUrl" alt="" />
                <span>@SecondaryButtonText</span>
            </button>
            <button class="btn btn-primary" @onclick="OnPrimaryClick">
                <img src="@PrimaryButtonImageUrl" alt="" />
                <span>@PrimaryButtonText</span>
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public string Title { get; set; }
    [Parameter] public RenderFragment Content { get; set; }
    [Parameter] public string PrimaryButtonText { get; set; } = "החלפת תוכן";
    [Parameter] public string SecondaryButtonText { get; set; } = "ביטול";
    [Parameter] public string SecondaryButtonImageUrl { get; set; } = "/images/emptyBTNWhite.png";
    [Parameter] public string PrimaryButtonImageUrl { get; set; } = "/images/emptyBTNRed.png";
    [Parameter] public EventCallback OnPrimaryClick { get; set; }
    [Parameter] public EventCallback OnSecondaryClick { get; set; }
    [Parameter] public EventCallback OnCloseClick { get; set; }
}

<style>
    .popupcomponent-background {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

        .popupcomponent-background.show {
            display: flex;
        }

    .popupcomponent-inner {
        background-image: url(/images/popupcomponentimg.png);
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center;
        padding: 2%;
        text-align: center;
        position: absolute;
        width: 43%;
        max-width: 190%;
        height: 50.7%;
        max-height: 70%;
        object-fit: contain;
    }

    .close-button {
        position: absolute;
        font-size: 1.7vw;
        font-family: Montserrat;
        top: 12%;
        left: 10%;
        color: #000;
        cursor: pointer;
        background: none;
        border: none;
        padding: 0;
    }

    .popupcomponent-title {
        font-size: 1.9vw;
        padding-top: 8%;
        text-align: center;
        color: black;
        font-family: Assistant;
        font-weight: 700;
        position: relative;
    }

    .popupcomponent-content {
        font-size: 1.7vw;
        color: black;
        font-family: Assistant;
        text-align: center;
        justify-content: center;
        padding: 2% 1%;
        position: absolute;
        top: 35%;
        width: 90%;
        display: flex;
    }

    .popupcomponent-buttons {
        display: flex;
        justify-content: center;
        align-items: center;
        position: absolute;
        bottom: 13%;
        left: 0;
        right: 0;
    }

    .btn {
        padding: 0;
        border: none;
        background: none;
        cursor: pointer;
        margin: 0 5%;
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 25%;
    }

        .btn img {
            width: 100%;
            height: auto;
        }

        .btn span {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-family: Assistant;
            font-weight: 700;
            font-size: 1.5vw;
            text-align: center;
            width: 100%;
        }

    .btn-secondary {
        color: rgb(124, 35,39);
    }

    .btn-primary {
        color: white;
    }
</style>
