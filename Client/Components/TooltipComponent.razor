<div class="tooltip-container">
    <span class="tooltip-text">תנאי הפרסום:</span>
    <div class="tooltip-item">
        <span>האם המשחק עם מספר שאלות זוגי:</span>
        <span class="status @(IsEvenNumberOfQuestions ? "green" : "red")">
            @(IsEvenNumberOfQuestions ? "✔️" : "❌")
        </span>
    </div>
    <div class="tooltip-item">
        <span>האם יש מינימום עשר שאלות:</span>
        <span class="status @(HasMinimumTenQuestions ? "green" : "red")">
            @(HasMinimumTenQuestions ? "✔️" : "❌")
        </span>
    </div>
</div>

@code {
    [Parameter] public bool IsEvenNumberOfQuestions { get; set; }
    [Parameter] public bool HasMinimumTenQuestions { get; set; }
}

<style>
    .tooltip-container {
        background-color: #f9f9f9;
        border: 1px solid #ccc;
        padding: 10px;
        margin-bottom: 20px;
        display: inline-block;
    }

    .tooltip-text {
        font-weight: bold;
        margin-right: 10px;
    }

    .tooltip-item {
        margin-top: 5px;
    }

    .status.green {
        color: green;
    }

    .status.red {
        color: red;
    }
</style>
